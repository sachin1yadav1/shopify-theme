{%- comment -%} Custom slider section, matching data.txt structure {%- endcomment -%}
{{ 'cro-custom-slider.css' | asset_url | stylesheet_tag }}
<section id="cro_custom_slider" class="cro-custom-slider color-{{ section.settings.color_scheme }} gradient">
  <div class="cro-slider__track">
    {%- for block in section.blocks -%}
      <div class="cro-slide" {{ block.shopify_attributes }}>
        <div class="cro-slide__media">
          {%- if block.settings.image != blank -%}
            {{ block.settings.image | image_url: width: 2000 | image_tag: widths: '400,800,1200,1600,2000', alt: block.settings.heading }}
          {%- endif -%}
        </div>
        <div class="cro-slide__content page-width">
          {%- if block.settings.preheading != blank -%}
            <p class="cro-slide__preheading">{{ block.settings.preheading }}</p>
          {%- endif -%}
          {%- if block.settings.heading != blank -%}
            <h2 class="cro-slide__heading">{{ block.settings.heading }}</h2>
          {%- endif -%}
          {%- if block.settings.subheading != blank -%}
            <p class="cro-slide__subheading">{{ block.settings.subheading }}</p>
          {%- endif -%}
          {%- if block.settings.button_label != blank and block.settings.button_link != blank -%}
            <a class="cro-slide__button button" href="{{ block.settings.button_link }}">
              {{ block.settings.button_label }}
            </a>
          {%- endif -%}
        </div>
      </div>
    {%- endfor -%}
  </div>
  <div class="cro-slider__controls page-width">
    <button class="cro-slider__prev" aria-label="{{ 'accessibility.previous' | t }}">{% render 'icon-caret' %}</button>
    <button class="cro-slider__next" aria-label="{{ 'accessibility.next' | t }}">{% render 'icon-caret' %}</button>
  </div>
  <script src="{{ 'cro-custom-slider.js' | asset_url }}" defer="defer"></script>
</section>

{% schema %}
{
  "name": "Custom Slider",
  "tag": "section",
  "class": "section",
  "settings": [
    { "type": "color_scheme", "id": "color_scheme", "label": "Color scheme", "default": "scheme-1" }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "text", "id": "preheading", "label": "Preheading" },
        { "type": "text", "id": "heading", "label": "Heading" },
        { "type": "textarea", "id": "subheading", "label": "Subheading" },
        { "type": "text", "id": "button_label", "label": "Button label" },
        { "type": "url", "id": "button_link", "label": "Button link" }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [{ "name": "Custom Slider", "category": "Custom" }]
}
{% endschema %}